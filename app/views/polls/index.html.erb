<h1>Pollster</h1>
<%= button_to 'New Poll', new_poll_path, :method => :get,  :class => 'button new_poll' %>
<ul class="accordion">
  <li class="active">
  <% @polls.each do |poll| %>
    <div class="title">
      <h5><%= poll.title %></h5>
      <p>Creator: <%= poll.author %></p>
      <row>
      <%= "#{poll.questions.count} questions    # responses"%>
      <%= link_to "Vote", poll, class: "button" %>
      <%= link_to "Results", results_poll_path(poll.id), class: "secondary button" %>
      </row>
    </div>
  </li>
  <% end %>
</ul>
















