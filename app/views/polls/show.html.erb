<!-- poll title, questions, response field -->
<h1><%= @poll.title %></h1>

<% @poll.questions.each do |question| %>
  <% if session[:answered_questions] && !session[:answered_questions].include?(question.id) %>
    <p><%= question.title %></p>
    <div class="row collapse">
      <div class="columns">
        <%= form_for question.answers.new, class: "form" do |f| %>
        <%= f.hidden_field :question_id %>
        <%= f.text_field :content %>
      </div>
      <div class="columns">
        <%= f.submit "Submit", :class => "button expand postfix" %>
        <% end %>
      </div>
    </div>
  <% end %>
<% end %>

<% if session[:answered_questions] && session[:answered_questions].include?(@poll.questions.last.id) %>
  <div>You've answered this poll</div>
<% end %>

<%= link_to "View Results", results_poll_path, :class => "button" %>
<%= link_to "Pollster Home", "/", :class => "secondary button" %>

